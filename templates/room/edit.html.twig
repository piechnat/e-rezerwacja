{% extends 'base.html.twig' %}
{% set main_title = 'Edytowanie sali' %}
{% block main %}

  <h2 class="main-title">{{ 'bx bx-edit'|ico }}{{ main_title|trans }}</h2>
  {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group button-row">
      <a class="button" href="{{ path('room_show', {id: room.id}) }}">
        {{ 'bx bx-arrow-back'|ico }}Katalog
      </a>
      <button type="submit" name="save" value="save">{{ 'bx bx-save'|ico }}{{ 'Zapisz'|trans }}</button>
      <button type="submit" name="delete" value="delete"
        onclick="return confirm('{{ 'Czy na pewno chcesz usunąć salę?'|trans }}')">
        {{ 'bx bx-trash'|ico }}{{ 'Usuń'|trans }}
      </button>
    </div>
  {{ form_end(form) }}
{% endblock %}