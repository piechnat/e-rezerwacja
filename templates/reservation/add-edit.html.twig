{% extends 'base.html.twig' %}

{% block title %}{{ form_title|trans }}{% endblock %}

{% block main %}
  <h2>{{ form_title|trans }}</h2>
  {{ form_start(form) }}
    {{ form_widget(form) }}
    {% if send_request == true %}
    <div class="form-group">
      <input type="checkbox" id="reservation_send_request" name="reservation[send_request]" required="required" value="1" />
      <label for="reservation_send_request" class="required">{{ 'Złóż wniosek o rezerwację sali'|trans }}</label>
    </div>
    {% endif %}
    <div class="form-group button-row">
      <button type="submit" name="send" value="send">
        <i class="fas fa-share-square"></i>{{ 'Wyślij'|trans }}
      </button>
    </div>
  {{ form_end(form) }}
  {{ include('jqslct2-load.html.twig') }}
{% endblock %}