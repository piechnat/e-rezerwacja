{% extends 'base.html.twig' %}

{% block title %}{{ 'Rezerwacja'|trans }}{% endblock %}

{% block main %}
  <h2 class="main-title">{{ 'bx bx-calendar-alt'|ico }}{{ 'Rezerwacja'|trans }}</h2>
  <p>Nazwa użytkownika: {{ rsvn.requester.fullname }}</p>
  <p>Adres e-mail: {{ rsvn.requester.email }}</p>
  <p>Sala: {{ rsvn.room.title }}</p>
  <p>Termin rozpoczęcia: {{ rsvn.beginTime|date('d.m.Y H:i') }}</p>
  <p>Godzina zakończenia: {{ rsvn.endTime|date('H:i') }}</p>
  <p>Cel rezerwacji: {{ rsvn.details|default('Ćwiczenie')|trans }}</p>
  <p class="form-group button-row">
    <a class="button" href="{{ path('reservation_edit', {id: rsvn.id}) }}">
      {{ 'bx bx-edit'|ico }}{{ 'Edytuj'|trans }}
    </a>
  </p>
{% endblock %}