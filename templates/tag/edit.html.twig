{% extends 'base.html.twig' %}

{% block title %}Edycja tagu{% endblock %}

{% block main %}
    <h1>Edycja tagu</h1>

    {% if edit_mode != 'entity' %}
        <p>Nazwa: {{ tag.name }}</p>
        <p>Funkcja wyszukiwania: {{ tag.search ? 'Tak' : 'Nie' }}</p>
        <p>Ograniczenie dostępu: {{ access_levels[tag.access] }}</p>
    {% endif %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <p class="form-group button-row">
            <a class="button" href="{{ path('tag_index') }}">
                <i class="fas fa-arrow-left"></i>Lista
            </a>
            <button type="submit" name="save" value="save"><i class="fas fa-save"></i>Zapisz</button>
            {% if edit_mode == 'entity' %}
                <button type="submit" name="delete" value="delete"><i class="fas fa-trash"></i>Usuń</button>
            {% endif %}
        </p>

    {{ form_end(form) }}
    {{ include('jqslct2-load.html.twig') }}

{% endblock %}
