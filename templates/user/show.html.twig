{% extends 'base.html.twig' %}

{% block title %}{{ 'Użytkownik'|trans }}{% endblock %}

{% block main %}
  <h2>{{ 'Użytkownik'|trans }}</h2>
  <p>Nazwa użytkownika: {{ user.username }}</p>
  <p>Adres e-mail: {{ user.email }}</p>
  <p>Uprawnienia: {{ user.roles ? user.roles|join(', ') : '' }}</p>
  <p class="button-row">
    <a class="button" href="{{ path('user_edit', {id: user.id}) }}">
      <i class="fas fa-edit"></i>{{ 'Edytuj'|trans }}
    </a>
  </p>
{% endblock %}