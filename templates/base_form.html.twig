{% form_theme form _self %}

{% block form_row %}
{% apply spaceless %}

  <div class="form-group {{ errors|length > 0 ? 'has-error' : '' }}">
    {{ form_label(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
  </div>

{% endapply %}
{% endblock form_row %}

{% block checkbox_row %}
{% apply spaceless %}

  <div class="form-group">
    {{ form_widget(form) }}
    {{ form_label(form) }}
    {{ form_errors(form) }}
    {{ form_help(form) }}
  </div>

{% endapply %}
{% endblock %}

{% block form_errors %}
{% apply spaceless %}

  {% if errors|length > 0 %}
    <ul class="form-errors">
      {% for error in errors %}
        <li>{{ error.message|raw }}</li>
      {% endfor %}
    </ul>
  {% endif %}

{% endapply %}
{% endblock %}